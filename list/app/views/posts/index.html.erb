<div class="container-fluid">
<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<div class='container-fluid well-lg'>
<%= form_tag posts_path, :method => 'get'  do %>
  <%= text_field_tag :search, params[:search]%>
  <%= submit_tag "Search"  %>
<% end %>
</div>
<table class="table">
  <thead>
    <tr>
      <th class="well">Sort:</th>
      <th><%= link_to 'Title', posts_path + '/sort/title' %></th>
      <th>Content</th>
      <th>User</th>
      <th><%= link_to 'Category', posts_path + '/sort/category' %></th>
      <th><%= link_to 'Date', posts_path + '/sort/created_at' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <div class="post" id=<%= 'post-'+post.id.to_s%>>
      <tr>
        <td></td>
        <td><%= link_to post.title, post %></td>
        <td><%= post.content.slice(0,100) %></td>
        <td><%= post.user.name %></td>
        <td><%= post.category %></td>
        <td><%= post.created_at %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      </div>
    <% end %>
  </tbody>
</table>

<br>

<div class="btn well center-block"><%= link_to 'New Post', new_post_path %></div>

</div>