<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1><%= @post.title %></h1>
  <div>
  <strong>Category:</strong>
  <%= @post.category %>
  </div>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to "Add Comment", new_comment_path(post_id: @post.id) %> |
  <%= link_to 'Back', posts_path %>
  
  <div class="well">
    <%= @post.content %>
  </div>
  

  

    <h4>Comments:</h4>
    <p>
    <%= render @post.comments %>
  </p>

</div>